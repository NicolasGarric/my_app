<div class="dropdown-menu">
  <form class="px-4 py-3" action="<%= session_path(resource_name) %>" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="mb-3">
      <label for="exampleDropdownFormEmail1" class="form-label">Email address</label>
      <input type="email" name="<%= resource_name %>[email]" class="form-control" id="exampleDropdownFormEmail1" placeholder="email@example.com" required autofocus>
    </div>
    <div class="mb-3">
      <label for="exampleDropdownFormPassword1" class="form-label">Password</label>
      <input type="password" name="<%= resource_name %>[password]" class="form-control" id="exampleDropdownFormPassword1" placeholder="Password" required>
    </div>
    <div class="mb-3">
      <div class="form-check">
        <input type="checkbox" name="<%= resource_name %>[remember_me]" class="form-check-input" id="dropdownCheck">
        <label class="form-check-label" for="dropdownCheck">
          Remember me
        </label>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Sign in</button>
  </form>
  <div class="dropdown-divider"></div>
  <a class="dropdown-item" href="<%= new_registration_path(resource_name) %>">New around here? Sign up</a>
  <a class="dropdown-item" href="<%= new_password_path(resource_name) %>">Forgot password?</a>
</div>
